@using ECommerce.Models.ViewModels;
@using ECommerce.Core.Pagination;

@model CategoryPageViewModel

@{
    var categoryPageViewModel = Model;

    var categories = categoryPageViewModel.Categories;
    var totalSize = categoryPageViewModel.PageInfo.Size;
    var totalPages = categoryPageViewModel.PageInfo.Page;
}

<div class="container">

    <div class="row">
        <div class="col-6 pt-4">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 pt-4 text-end">
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                <i class="bi bi-plus-circle"></i>
                Create a new category
            </a>
        </div>
    </div>

    <table class="table table-light bg-light table-striped">
        <tr>
            <th>
                Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>
        @foreach (var category in categories)
        {
            <tr>
                <td>@(category.Name)</td>
                <td>@(category.DisplayOrder)</td>
                <td>
                    <div class="btn-group w-100">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>

    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item"><a class="page-link" asp-controller="Category" asp-action="Index" asp-route-pagenumber="1">First</a></li>
            @for (var i = 0; i < totalPages; i++)
            {
                <li class="page-item"><a class="page-link" asp-controller="Category" asp-action="Index" asp-route-pagenumber="@(i + 1)">@(i + 1)</a></li>
            }
            <li class="page-item"><a class="page-link" asp-controller="Category" asp-action="Index" asp-route-pagenumber="@(categoryPageViewModel.PageInfo.Page)">Last</a></li>
        </ul>
    </nav>
</div>