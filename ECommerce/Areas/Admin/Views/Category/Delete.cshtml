@using ECommerce.Models.ViewModels;

@model CategoryViewModel

<form asp-controller="Category" asp-action="Delete" method="post">
    <input asp-for="Id" hidden />
    <div class="border p-4 border-dark">
        <div class="row">
            <h2>Delete category</h2>
        </div>

        <div class="row mb-2">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="row mb-2">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
        </div>
        <div class="row mt-4">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a class="btn btn-outline-secondary form-control" asp-controller="Category" asp-action="Index">Back to categories</a>
            </div>
        </div>
    </div>
</form>