@using ECommerce.Models.ViewModels;

@model CompanyViewModel

<form asp-controller="Company" asp-action="Delete" method="post">
    <input asp-for="Id" hidden />
    <div class="border p-4 border-dark">
        <div class="row">
            <h2>Delete company</h2>
        </div>

        <div class="row mb-2">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="row mb-2">
            <label asp-for="StreetAddress"></label>
            <input asp-for="StreetAddress" disabled class="form-control" />
        </div>
        <div class="row mb-2">
            <label asp-for="State"></label>
            <input asp-for="State" disabled class="form-control" />
        </div>
        <div class="row mb-2">
            <label asp-for="City"></label>
            <input asp-for="City" disabled class="form-control" />
        </div>
        <div class="row mb-2">
            <label asp-for="PostalCode"></label>
            <input asp-for="PostalCode" disabled class="form-control" />
        </div>
        <div class="row mb-2">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" disabled class="form-control" />
        </div>
        <div class="row mt-4">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6">
                <a class="btn btn-outline-secondary form-control" asp-controller="Company" asp-action="Index">Back to companies</a>
            </div>
        </div>
    </div>
</form>