@using ECommerce.Models.ViewModels;
@using ECommerce.Core.Pagination;

@model CompanyPageViewModel

@{
    var companyPageViewModel = Model;

    var companies = companyPageViewModel.Companies;
    var totalSize = companyPageViewModel.PageInfo.Size;
    var totalPages = companyPageViewModel.PageInfo.Page;
}

<div class="container">

    <div class="row">
        <div class="col-6 pt-4">
            <h2 class="text-primary">Companies</h2>
        </div>
        <div class="col-6 pt-4 text-end">
            <a class="btn btn-primary" asp-controller="Company" asp-action="Create">
                <i class="bi bi-plus-circle"></i>
                Create a new company
            </a>
        </div>
    </div>

    <table class="table table-light bg-light table-striped">
        <tr>
            <th>
                Name
            </th>
            <th>
                Street Address
            </th>
            <th>
                State
            </th>
            <th>
                City
            </th>
            <th>
                Postal Code
            </th>
            <th>
                Phone Number
            </th>
            <th></th>
        </tr>
        @foreach (var company in companies)
        {
            <tr>
                <td>@(company.Name)</td>
                <td>@(company.StreetAddress)</td>
                <td>@(company.State)</td>
                <td>@(company.City)</td>
                <td>@(company.PostalCode)</td>
                <td>@(company.PhoneNumber)</td>
                <td>
                    <div class="btn-group w-100">
                        <a asp-controller="Company" asp-action="Edit" asp-route-id="@company.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Company" asp-action="Delete" asp-route-id="@company.Id" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </table>

    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item"><a class="page-link" asp-controller="Company" asp-action="Index" asp-route-pagenumber="1">First</a></li>
            @for (var i = 0; i < totalPages; i++)
            {
                <li class="page-item"><a class="page-link" asp-controller="Company" asp-action="Index" asp-route-pagenumber="@(i + 1)">@(i + 1)</a></li>
            }
            <li class="page-item"><a class="page-link" asp-controller="Company" asp-action="Index" asp-route-pagenumber="@(companyPageViewModel.PageInfo.Page)">Last</a></li>
        </ul>
    </nav>
</div>