@using ECommerce.Models.ViewModels;

@model ProductViewModel
@{
    var categories = ViewBag.Categories;

    var productViewModel = Model;

    if (productViewModel == null)
    {
        return;
    }
}

<form asp-controller="Product" asp-action="Upsert" method="post" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="border p-4 border-dark">
        <div class="row">
            <div class="col-10">
                <h2>Edit product</h2>
            </div>
            <div class="col-2">
                @if (!string.IsNullOrEmpty(productViewModel.ImageUrl))
                {
                    <img style="width:150px" src="~/images/@(productViewModel.ImageUrl)" alt="Product image" />
                }
            </div>
        </div>

        <div asp-validation-summary="All"></div>

        <div class="row mb-2">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="row mb-2">
            <label asp-for="Description"></label>
            <textarea asp-for="Description">
            </textarea>
            <script>
                tinymce.init({
                    selector: 'textarea',
                    plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
                    toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
                });
            </script>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row mb-2">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" class="form-control" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="row mb-2">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="row mb-2">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="row mb-2">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" />
        </div>
        <div class="row mb-2">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="categories"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="row mb-2">
            <input type="file" name="File" />
        </div>
        <div class="row mt-4">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6">
                <a class="btn btn-outline-secondary form-control" asp-controller="Product" asp-action="Index">Back to products</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}